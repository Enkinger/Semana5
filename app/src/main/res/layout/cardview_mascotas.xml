<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/margen_horizontal"
    android:layout_marginTop="@dimen/margen_vertical"
    android:layout_marginRight="@dimen/margen_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMascota"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imagen_mascota"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/gato" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibLike"
                    android:layout_width="50sp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_bone_dark"
                    />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/datos_mascota"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/datos_mascota"
                    android:gravity="right|center_vertical"


                    android:text="TextView" />

                <ImageView
                    android:id="@+id/ivHueso"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_bone_light" />
            </LinearLayout>
        </LinearLayout>


    
    

</androidx.cardview.widget.CardView>